<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.Light.NoActionBar" />
    <style name="Theme.TwitterCloneApp" parent="Base.Theme.MyApplication">
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:background">@color/primary_background</item>
        <item name="android:statusBarColor">@color/primary_background</item>
        <item name="android:navigationBarColor">@color/on_primary</item>
        <item name="android:windowLightStatusBar">true</item>
        </style>
    <style name="AlertDialogTheme">
        <item name="backgroundInsetEnd">0dp</item>
        <item name="backgroundInsetStart">0dp</item>
    </style>
    <style name="Theme.TwitterCloneAppWithActionBar" parent="Base.Theme.MyApplication">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:background">@color/white</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:navigationBarColor">@color/on_primary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
    <style name="Theme.TwitterButton" parent="Theme.Material3.Light">
        <item name="backgroundTint">@color/twitter_background</item>
    </style>
</resources>