<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/fragmentSplash">

    <fragment
        android:id="@+id/fragmentSplash"
        android:name="ar.scacchipa.twittercloneapp.fragment.FragmentSplash"
        android:label="FragmentSplash" >
        <action
            android:id="@+id/action_fragmentSplash_to_fragmentLogin"
            app:destination="@id/fragmentLogin"
            app:popUpTo="@id/fragmentSplash"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/fragmentLogin"
        android:name="ar.scacchipa.twittercloneapp.fragment.FragmentLogin"
        android:label="FragmentLogin" >
        <action
            android:id="@+id/action_fragmentLogin_to_fragmentLoginApi"
            app:destination="@id/fragmentLoginApi" />
    </fragment>
    <fragment
        android:id="@+id/fragmentLoginApi"
        android:name="ar.scacchipa.twittercloneapp.fragment.FragmentAuthWebDialog"
        android:label="FragmentLoginApi" >
        <action
            android:id="@+id/action_fragmentAuthWebDialog_to_fragmentLoginSuccess"
            app:destination="@id/fragmentHappyPath" />
        <action
            android:id="@+id/action_fragmentAuthWebDialog_to_fragmentLoginError"
            app:destination="@id/sadFragment" />
    </fragment>
    <fragment
        android:id="@+id/fragmentHappyPath"
        android:name="ar.scacchipa.twittercloneapp.fragment.FragmentLoginSuccess"
        android:label="FragmentHappyPath" >
        <argument
            android:name="bearerToken"
            app:argType="string"
            android:defaultValue=""/>
    </fragment>
    <fragment
        android:id="@+id/sadFragment"
        android:name="ar.scacchipa.twittercloneapp.fragment.FragmentLoginError"
        android:label="fragment_sad"
        tools:layout="@layout/fragment_login_error"/>
</navigation>